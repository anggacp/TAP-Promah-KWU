<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFD3B6"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/halo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:text="Halo,"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="48sp"
        />
    <TextView
        android:id="@+id/siapa_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/halo_text"
        android:paddingLeft="30dp"
        android:text="Siapa namamu?"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="36sp"
        />
    <ImageView
        android:id="@+id/auth_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/siapa_text"
        android:src="@drawable/auth_pic"
        />
    <EditText
        android:id="@+id/input_text"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/auth_image"
        android:layout_marginTop="15dp"
        android:text="Input name here ..."
        android:background="@color/cardview_light_background"
        />
    <Button
        android:id="@+id/button_oke"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_text"
        android:layout_marginTop="15dp"
        android:text="Oke"
        android:textSize="20sp"
        />


</RelativeLayout>